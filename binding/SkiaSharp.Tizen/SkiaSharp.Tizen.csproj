<Project Sdk="Tizen.NET.Sdk/1.0.9">
  <PropertyGroup>
    <TargetFramework>tizen40</TargetFramework>
    <RootNamespace>SkiaSharp</RootNamespace>
    <AssemblyName>SkiaSharp</AssemblyName>
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
    <TizenCreateTpkOnBuild>false</TizenCreateTpkOnBuild>
    <PackagingGroup>SkiaSharp</PackagingGroup>
    <DefineConstants>$(DefineConstants);__TIZEN__;</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.3" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\output\native\tizen\armel\libSkiaSharp.so" Link="nuget\build\tizen40\runtimes\tizen-arm\native\libSkiaSharp.so" />
    <None Include="..\..\output\native\tizen\i386\libSkiaSharp.so" Link="nuget\build\tizen40\runtimes\tizen-x86\native\libSkiaSharp.so" />
    <None Include="nuget\build\tizen40\SkiaSharp.targets" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\Binding.Shared\**\*.cs" Link="%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\Binding\**\*.cs" Link="%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
</Project>
